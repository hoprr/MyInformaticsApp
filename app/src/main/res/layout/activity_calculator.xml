<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="5"
    android:background="#ffff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#000"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/exp"
            android:padding="30dp"
            android:gravity="end|bottom"
            android:textSize="30sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#d6d7d7"
        android:weightSum="4"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">
            <Button
                android:id="@+id/num7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="7"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/num4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="4"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/num1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="1"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="."
                android:textSize="35sp"
                android:background="#d6d7d7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">
            <Button
                android:id="@+id/num8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="8"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/num5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="5"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/num2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="2"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/num0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="0"
                android:textSize="35sp"
                android:background="#d6d7d7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/num9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="9"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/num6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="6"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/num3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="3"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="="
                android:textSize="35sp"
                android:background="#d6d7d7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">
            <Button
                android:id="@+id/del"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="Del"
                android:textAllCaps="false"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/mult"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="*"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="+"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
            <Button
                android:id="@+id/subs"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="-"
                android:textSize="35sp"
                android:background="#d6d7d7"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>